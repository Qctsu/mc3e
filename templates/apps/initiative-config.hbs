<form autocomplete="off">
    <p class="notes">{{localize "mc3e.InitiativeConfigHint"}}</p>

    <div class="form-group">
        <label>{{localize "mc3e.AbilityModifier"}}</label>
        <div class="form-fields">
            <select name="system.attributes.init.ability">
                {{selectOptions abilities selected=ability blank=""}}
            </select>
        </div>
    </div>

    <div class="form-group">
        <label>{{localize "mc3e.InitiativeBonus"}}</label>
        <div class="form-fields">
            <input name="system.attributes.init.bonus" type="text" value="{{bonus}}"/>
        </div>
    </div>

    <div class="form-group">
        <label>{{localize "mc3e.FlagsAlert"}}</label>
        <input type="checkbox" name="flags.mc3e.initiativeAlert" {{checked initiativeAlert}}/>
    </div>

    <div class="form-group">
        <label>{{localize "mc3e.FlagsInitiativeAdv"}}</label>
        <input type="checkbox" name="flags.mc3e.initiativeAdv" {{checked initiativeAdv}}/>
    </div>

    <button type="submit"><i class="far fa-save"></i> {{ localize "Submit"}}</button>
</form>
