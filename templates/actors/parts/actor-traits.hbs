<div class="traits">
    <div class="form-group">
        <label>{{localize "mc3e.Size"}}</label>
        <select class="actor-size" name="system.traits.size">
            {{#select system.traits.size}}
            {{#each config.actorSizes as |label size|}}
                <option value="{{size}}">{{label}}</option>
            {{/each}}
            {{/select}}
        </select>
    </div>

    {{#unless isVehicle}}
    <div class="form-group">
        <label>{{localize "mc3e.Senses"}}</label>
        <a class="config-button" data-action="senses" data-tooltip="mc3e.SensesConfig">
            <i class="fas fa-cog"></i>
        </a>
        <ul class="traits-list">
        {{#each senses as |v k|}}
            <li class="tag {{k}}">{{v}}</li>
        {{/each}}
        </ul>
    </div>

    <div class="form-group {{traits.traits.languages.cssClass}}">
        <label>{{localize "mc3e.Languages"}}</label>
        <a class="trait-selector" data-trait="languages"
           data-tooltip="{{localize 'mc3e.TraitConfig' trait=(localize 'mc3e.Languages')}}" tabindex="0">
            <i class="fas fa-edit"></i>
        </a>
        <ul class="traits-list">
        {{#each traits.traits.languages.selected as |v k|}}
            <li class="tag {{k}}">{{v}}</li>
        {{/each}}
        </ul>
    </div>
    {{/unless}}

